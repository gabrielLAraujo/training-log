// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Exercise {
  id               String               @id @default(uuid())
  name             String
  force            String?
  level            String
  mechanic         String?
  equipment        String?
  primaryMuscles   String[]
  secondaryMuscles String[]
  instructions     String[]
  images           String[]             @default([])
  category         String

  // esses campos agora est√£o aqui como opcionais
  minRepetitions   Int?
  maxRepetitions   Int?
  numberOfSets     Int?

  routines         RoutineExercise[]
  executions       ExerciseExecution[]
}

model Routine {
  id        String            @id @default(uuid())
  name      String
  exercises RoutineExercise[]
}

model RoutineExercise {
  id             String   @id @default(uuid())
  routine        Routine  @relation(fields: [routineId], references: [id])
  routineId      String
  exercise       Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId     String

  order          Int?
  numberOfSets   Int?
  minRepetitions Int?
  maxRepetitions Int?
}

model WorkoutSession {
  id          String               @id @default(uuid())
  userId      String
  date        DateTime
  notes       String?
  executions  ExerciseExecution[]
}

model ExerciseExecution {
  id             String          @id @default(uuid())
  session        WorkoutSession  @relation(fields: [sessionId], references: [id])
  sessionId      String

  exercise       Exercise        @relation(fields: [exerciseId], references: [id])
  exerciseId     String

  setNumber      Int
  repetitions    Int?
  weight         Float?
  durationSecs   Int?
  notes          String?
}
